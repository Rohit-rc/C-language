// To Find the Factorial of a number using Recursion
#include<conio.h>
#include<stdio.h>

int fact(int n)
{
	if(n<2)
	return 1;
	return n*fact(n-1);
}

void main()
{
long int num;
clrscr();
printf("Enter the number : ");
scanf("%li",&num);
printf("Your factorial is %li",fact(num));
getch();
return;
}
